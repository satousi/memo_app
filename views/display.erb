<table border>
  <tr>
    <td>
      <form method="get" action="/memos">
        <input type="submit" value="戻る">
      </form>
    </td>
    <td>
      <form method="get" action="/memos/<%= @key %>/changes">
        <input type="submit" value="変更">
      </form>
    </td>
    <td>
      <form method="post" action="/memos/<%= @key %>/deletions">
        <input type="submit" value="削除">
        <input type="hidden" name="_method" value="delete">
      </form>
    </td>
  </tr>
</table>

<table border>
  <tr>
    <th>タイトル</th>
    <td><input type="text" name="title" size="50" readonly value="<%= CGI.escapeHTML(@memo["title"]) %>"></td>
  </tr>
  <tr>
    <th>メモ</th>
    <td><textarea name="content" rows="10" cols="50" readonly><%= CGI.escapeHTML(@memo["content"]) %></textarea></td>
  </tr>

</table>
